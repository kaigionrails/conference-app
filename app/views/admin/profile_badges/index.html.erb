<div class="mb-16">
<h2 class="font-bold text-xl mb-8">ProfileBadges</h2>
<%= link_to "Create new profile_badge", new_admin_profile_badge_path, class: "border shadow-sm border-gray-500 rounded-sm px-4 py-2 cursor-pointer inline-block mb-4" %>
<h3 class="text-lg font-bold mb-2">badges</h3>
<p class="mb-4">Click to edit</p>
<div class="w-full flex flex-wrap">
  <% @profile_badges.each do |badge| %>
    <%= link_to edit_admin_profile_badge_path(badge), class: "inline-block mr-3 mb-3" do %>
      <div class="inline-block py-1 px-3 border-2 rounded-3xl whitespace-nowrap" style="background-color: <%= badge.background_color_code %>; border-color: <%= badge.border_color_code %>"><%= badge.text %></div>
    <% end %>
  <% end %>
</div>
</div>
