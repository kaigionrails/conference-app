<h2 h2 class="font-bold text-xl mb-8">Live</h2>

<div class="pr-8">
  <div class="mb-8">
  <%= link_to "Create new live stream", new_admin_live_stream_path, class: "border shadow-sm border-gray-500 rounded-sm px-4 py-2 cursor-pointer" %>
  </div>
  <div class="mb-8">
    <h3 class="font-bold text-lg">live streams</h3>
    <% @cloudflare_stream_live_streams.each do |live_stream| %>
      <div class="mb-4">
        <h4 class="font-bold text-lg mb-2"><%= "#{live_stream.name} (id:#{live_stream.id})" %></h4>
      <%= link_to "show", admin_live_stream_path(live_stream), class: "border shadow-sm border-gray-500 rounded-sm px-4 py-2 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
