  data-controller="talk-bookmarks"
  data-action="click->talk-bookmarks#toggle"
  data-talk-bookmarks-bookmarked-value="<%= !!user_bookmarks.find { |b| b.talk_id == talk.id } %>"
  data-talk-bookmarks-talk-id-value="<%= talk.id %>"
